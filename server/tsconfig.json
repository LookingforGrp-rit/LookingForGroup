{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "allowUnreachableCode": false
  },
  "include": ["src", "tests"],
  "exclude": ["**/generated/**"]
}
