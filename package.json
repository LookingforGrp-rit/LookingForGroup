{
  "name": "looking-for-group",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "CC0-1.0",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "prepare": "husky && npm run prisma:generate",
    "dev": "concurrently \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "prisma:pull": "npx --workspace=server prisma db pull",
    "prisma:generate": "npx --workspace=server prisma generate",
    "build:client": "npm run build --workspace=client",
    "test": "npm run test --workspace=server",
    "test:front": "vitest run --config server/src/config/vitest.js",
    "lint:server:types": "npm run lint:types --workspace=server",
    "lint:server": "npm run lint --workspace=server",
    "lint:client:types": "npm run lint:types --workspace=client",
    "lint:client": "npm run lint --workspace=client",
    "format:server": "npm run format --workspace=server"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=v23.6.0"
  }
}
